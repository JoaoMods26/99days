-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- ğŸŒ TOGGLE: DESBLOQUEAR TODO EL MAPA (AUTO DESACTIVACIÃ“N + VELOCIDAD AJUSTADA)
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

local unlockingMap = false
local originalCFrame = nil
local unlockThread = nil

MainTab:CreateToggle({
    Name = "ğŸŒ Mapa",
    CurrentValue = false,
    Callback = function(state)
        unlockingMap = state

        if unlockingMap then
            -- Guardar posiciÃ³n original del jugador
            if character and character:FindFirstChild("HumanoidRootPart") then
                originalCFrame = character.HumanoidRootPart.CFrame
            else
                notify("âŒ Error", "Personaje no encontrado", 2)
                unlockingMap = false
                return
            end

            -- Obtener punto central del mapa (Spawn)
            local centerPos
            local map = workspace:FindFirstChild("Map")
            if map and map:FindFirstChild("SpawnLocation") then
                centerPos = map.SpawnLocation.Position
            else
                centerPos = Vector3.new(0, 0, 0)
            end


            -- Movimiento circular con radio creciente
            unlockThread = task.spawn(function()
                local root = character:WaitForChild("HumanoidRootPart")
                local angle = 0
                local radius = 150
                local height = 200
                local angularSpeed = 0.9     -- ğŸ”¹ Giro mÃ¡s controlado
                local radiusGrowth = 0.9      -- ğŸ”¹ ExpansiÃ³n mÃ¡s suave

                local startTime = tick()
                while unlockingMap and root do
                    -- Si pasaron 30 segundos â†’ se detiene solo
                    if tick() - startTime >= 55 then
                        unlockingMap = false
                        break
                    end

                    -- Calcular posiciÃ³n circular
                    local x = centerPos.X + math.cos(angle) * radius
                    local z = centerPos.Z + math.sin(angle) * radius
                    local y = centerPos.Y + height

                    -- Mover con CFrame (mirando hacia el centro)
                    root.CFrame = CFrame.new(Vector3.new(x, y, z), centerPos)

                    -- Incrementos suaves
                    angle += angularSpeed
                    radius += radiusGrowth

                    task.wait(0.03) -- ğŸ”¹ Un poco mÃ¡s lento y estable
                end

                -- Auto-desactivaciÃ³n y retorno
                if originalCFrame and character and character:FindFirstChild("HumanoidRootPart") then
                    character.HumanoidRootPart.CFrame = originalCFrame
                    notify("âœ… Desbloqueo Completado", "ExploraciÃ³n finalizada automÃ¡ticamente", 3)
                end
            end)
        else
            -- Manualmente desactivado
            if unlockThread then
                task.cancel(unlockThread)
                unlockThread = nil
            end

            if originalCFrame and character and character:FindFirstChild("HumanoidRootPart") then
                character.HumanoidRootPart.CFrame = originalCFrame
                notify("âœ… Desbloqueo Finalizado", "Mapa recorrido completamente", 3)
            else
                notify("âš ï¸ Aviso", "No se pudo regresar a la posiciÃ³n original", 2)
            end
        end
    end
})



MainTab:CreateToggle({
    Name = "ğŸ–±ï¸ Auto-Click",
    CurrentValue = false,
    Callback = function(state)
        toggleAutoClick(state)
    end
})



    Name = "ğŸ—‘ï¸ Limpiar Todo ESP",
    Callback = function()
        for obj, esp in pairs(espObjects) do
            if esp then
                esp:Destroy()
            end
        end
        espObjects = {}
        notify("âœ… ESP Limpiado", "Todo ESP removido", 2)
    end
})

